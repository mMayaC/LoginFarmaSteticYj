<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

   <TextView
        android:text="Para poder recuperar su contraseña, digite el correo electrónico o el número del celular con el cual realizo el registro."
        android:gravity="center"
        android:textSize="21sp"
        android:textColor="@android:color/black"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_height="120dp"
        android:textStyle="bold"
        android:id="@+id/txtVwRecoverPassword" />

    <EditText
        android:inputType="textMultiLine"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:hint="Digite su correo electrónico o número de celular"
        android:gravity="center"
        android:id="@+id/txtRecovery" />
    <Button
        android:text="Enviar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="?android:attr/colorPrimary"
        android:id="@+id/btnSend" />

</LinearLayout>
